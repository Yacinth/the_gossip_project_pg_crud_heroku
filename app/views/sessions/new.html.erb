<br>
<div class="col-lg-8 offset-lg-2 firm-group">    
    <h1><b>Sign in<b></h1>
</div>
<br>

<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="col-lg-8 offset-lg-2 firm-group">
    <%= label_tag 'Email' %>
    <%= text_field_tag 'email', params[:email], class: "form-control", placeholder: "Enter your email" %>
  </div>
  <br>
  <div class="col-lg-8 offset-lg-2 firm-group">
    <%= label_tag 'Password' %>
    <%= text_field_tag 'password', params[:password], class: "form-control", placeholder: "Enter your password" %>
  </div>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <br>
  <div class="d-flex justify-content-center">
    <%= submit_tag "Sign in", class: "btn btn-primary"%>
  </div>
<% end %>
  